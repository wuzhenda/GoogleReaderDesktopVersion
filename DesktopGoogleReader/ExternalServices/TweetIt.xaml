<Window x:Class="DesktopGoogleReader.ExternalServices.TweetIt"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Tweet this item" Height="211" Width="300" Icon="/DesktopGoogleReader;component/Resources/images/twitter.png">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <LinearGradientBrush.GradientStops>
                <GradientStop Offset="0" Color="White" />
                <GradientStop Offset="1" Color="#eee" />
            </LinearGradientBrush.GradientStops>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <TextBox Margin="12,12,12,0" Name="textBox1" Height="123" VerticalAlignment="Top" MaxLength="140" TextWrapping="Wrap" TextChanged="textBox1_TextChanged" />
        <Button Height="23" HorizontalAlignment="Left" Margin="12,141,0,0" Name="button_cancel" VerticalAlignment="Top" Width="75" Click="button_cancel_Click">Cancel</Button>
        <Button Height="23" HorizontalAlignment="Left" Margin="191,141,0,0" Name="button_tweetIt" VerticalAlignment="Top" Width="75" Click="button_tweetIt_Click">Tweet it</Button>
        <Label Height="28" Margin="93,141,93,0" Name="label_characters" VerticalAlignment="Top" HorizontalContentAlignment="Center">140</Label>
    </Grid>
</Window>
