<Window x:Class="DesktopGoogleReader.UIelements.SubscribeToNewFeed"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Subscribe to new newsfeed" Height="146" Width="300" Icon="/DesktopGoogleReader;component/Resources/images/add.png">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,0.5">
            <LinearGradientBrush.GradientStops>
                <GradientStop Offset="0" Color="#eee" />
                <GradientStop Offset="1" Color="#ccc" />
            </LinearGradientBrush.GradientStops>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <TextBox Height="23" Margin="12,12,12,0" Name="textBoxFeedUrl" VerticalAlignment="Top"  />
        <Button Height="23" Margin="36,41,0,0" Name="buttonSubscribe" VerticalAlignment="Top" HorizontalAlignment="Left" Width="97" Click="buttonSubscribe_Click">Subscribe</Button>
        <Button HorizontalAlignment="Right" Margin="0,41,44,0" Name="buttonCancel" Width="75" Click="buttonCancel_Click" Height="23" VerticalAlignment="Top">Cancel</Button>
        <Label Margin="13,70,12,0" Name="labelStatusText" Height="28" VerticalAlignment="Top">Paste your feed URL and press "Subscribe"</Label>
    </Grid>
</Window>
